/**index.wxss**/
.container {
  padding: 0 0 200rpx 0;
  display: flex;
  flex-direction: column;
  background-color: #F2f2f2;
  min-height: 100%;
}

.swiper-container {
  width: 750rpx;
}

.swiper_box {
  width: 100%;
  height: 562.5rpx;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 562.5rpx;
}

.swiper-container .dots {
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot {
  margin: 0 8rpx;
  margin-top: 15rpx;
  width: 14rpx;
  height: 14rpx;
  background: rgb(151, 132, 132);
  border-radius: 50%;
  transition: all .6s;
  opacity: .5;
}

.swiper-container .dots .dot.active {
  width: 14rpx;
  opacity: 1;
  background-color: red;
}

.content {
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 14px;
  text-indent: 2em;
  font-family: Helvetica;
  line-height: 25px;
}

.title {
  text-align: center;
  font-size: 18px;
  font-weight: 500;
}

.text-content {
  margin-top: 10px;
  padding: 0 30rpx;
}